{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<main>
		<div id="conteneurUser">
			<h2>Utilisateurs</h2>
			<table class="table" class="thead">
				<thead>
					<tr>
						<th>Id</th>
						<th>Email</th>
						<th>Roles</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ include('user/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<a href="{{ path('app_register') }}">Cr√©e un nouveau utilisateur</a>
		</div>
	</main>
{% endblock %}
