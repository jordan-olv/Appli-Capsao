{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe
{% endblock %}

{% block body %}
	<main>
		<div id="conteneur">
			<h1>Réinitialisez votre mot de passe</h1>

			{{ form_start(resetForm) }}
			{{ form_row(resetForm.plainPassword) }}
			<button class="btn btnPrimary">Réinitialiser le mot de passe</button>
			{{ form_end(resetForm) }}
			<a href="{{ path('app_login') }}">Retour connexion</a>
		</div>
	</main>
{% endblock %}
