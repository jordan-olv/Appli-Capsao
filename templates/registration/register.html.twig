{% extends 'base.html.twig' %}

{% block title %}Ajout Utilisateur
{% endblock %}

{% block body %}
	<main>
		<div id="conteneur">
			<h2>Ajout d'un Utilisateur</h2>

			{{ form_start(registrationForm, { 'attr' : { 'class': 'formUser' } }) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe : '}) }}

			{{ form_row(registrationForm.roles) }}


			<button type="submit" class="btn btnPrimary">Enregistrer</button>
			{{ form_end(registrationForm) }}

		</div>

	</main>
{% endblock %}
